{
    "name": "gatsby-starter-typescript-plus",
    "description": "A starter kit for TypeScript-based Gatsby projects with sensible defaults.",
    "version": "1.0.0",
    "private": true,
    "prettier": "oberon-prettier-config",
    "author": "Chris Neven <chrisn@oberon.nl>",
    "keywords": [
        "gatsby"
    ],
    "license": "MIT",
    "main": "n/a",
    "scripts": {
        "build": "gatsby build",
        "clean": "rimraf public",
        "deploy": "gatsby build --prefix-paths && gh-pages -d public",
        "dev": "gatsby develop",
        "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
        "start": "npm run dev",
        "test": "npm run type-check && npm run lint",
        "typecheck": "tsc",
        "codegen": "graphql-codegen --config codegen.yml"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "dependencies": {
        "@types/react-headroom": "^2.2.1",
        "babel-plugin-styled-components": "^1.10.6",
        "classnames": "^2.2.6",
        "formik": "^1.5.8",
        "gatsby": "^2.10.0",
        "gatsby-image": "^2.2.1",
        "gatsby-plugin-canonical-urls": "^2.1.0",
        "gatsby-plugin-codegen": "^1.0.3",
        "gatsby-plugin-manifest": "^2.2.26",
        "gatsby-plugin-react-helmet": "^3.1.14",
        "gatsby-plugin-sharp": "^2.2.14",
        "gatsby-plugin-styled-components": "^3.1.5",
        "gatsby-plugin-typescript": "^2.1.0",
        "gatsby-remark-copy-linked-files": "^2.1.0",
        "gatsby-remark-images": "^3.1.0",
        "gatsby-remark-prismjs": "^3.3.0",
        "gatsby-remark-responsive-iframe": "^2.2.0",
        "gatsby-remark-smartypants": "^2.1.0",
        "gatsby-source-filesystem": "^2.1.0",
        "gatsby-transformer-json": "^2.2.0",
        "gatsby-transformer-remark": "^2.5.0",
        "gatsby-transformer-sharp": "^2.2.0",
        "graphql": "^14.5.4",
        "headroom.js": "^0.10.3",
        "modern-normalize": "^0.5.0",
        "normalize.css": "^8.0.1",
        "polished": "^3.4.1",
        "prism-themes": "^1.1.0",
        "prismjs": "^1.16.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-headroom": "^2.2.8",
        "react-helmet": "^5.2.1",
        "react-in-viewport": "0.0.35",
        "react-spring": "^8.0.27",
        "reflexbox": "^4.0.5",
        "styled-components": "^4.3.2",
        "ts-optchain": "^0.1.8",
        "typescript": "^3.5.2",
        "use-onclickoutside": "^0.3.1"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^1.7.0",
        "@graphql-codegen/cli": "^1.7.0",
        "@graphql-codegen/schema-ast": "^1.7.0",
        "@graphql-codegen/typescript": "1.1.3",
        "@graphql-codegen/typescript-operations": "1.1.3",
        "@types/classnames": "^2.2.8",
        "@types/gh-pages": "^2.0.0",
        "@types/headroom": "^0.7.31",
        "@types/node": "^12.0.10",
        "@types/prettier": "^1.18.2",
        "@types/prismjs": "^1.16.0",
        "@types/react": "^16.8.22",
        "@types/react-dom": "^16.8.4",
        "@types/react-helmet": "^5.0.8",
        "@types/reflexbox": "^4.0.0",
        "@types/rimraf": "^2.0.2",
        "@types/styled-components": "^4.1.19",
        "gh-pages": "^2.0.1",
        "husky": "^3.0.5",
        "lint-staged": "^9.2.5",
        "oberon-prettier-config": "^1.0.0",
        "prettier": "^1.18.2",
        "rimraf": "^2.6.3",
        "tslint": "^5.20.0",
        "tslint-config-oberon": "^1.2.0",
        "tslint-config-prettier": "^1.18.0"
    },
    "lint-staged": {
        "*.ts?(x)": [
            "tslint --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run typecheck && lint-staged"
        }
    }
}
